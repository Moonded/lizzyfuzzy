{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "es2022",
    "module": "esnext",
    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "resolveJsonModule": true
  },
  "include": ["./**/*"],
  "exclude": ["./plugins/**/*", "./typings/**/*", "./dist/**/*"]
}
